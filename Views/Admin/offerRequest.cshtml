
@{
    ViewBag.Title = "offerRequest";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<section class="page-content course-sec">
    <p class="text-center">
        Offer  Management is a quick overview of all current Course Offer .</p">
        <div class="comman-space pb-0">
            <div class="settings-tickets-blk course-instruct-blk table-responsive">

                <table id="myTable" class="table table-nowrap mb-0 dataTable">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Course Id</th>
                            <th>Email</th>
                            <th>Date </th>
                            <th>Message </th>
                            <th>ACTION</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            int i = 1;
                            foreach (System.Data.DataRow row in Model.Rows)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@row["course_id"]</td>
                                    <td>@row["email"]</td>
                                    <td>@row["date"]</td>
                                    <td>@row["Message"]</td>
                                    <td>
                                        <a href="/admin/OfferRequest?sr=@row["sr"]" onclick="return confirm('Do you really want to delete it?')"><button class="btn btn-danger fa fa-trash" title="Delete"></button> </a>
                                    </td>
                                </tr>



                                { i = i + 1; }

                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>

</section>

<script src="~/Content/assets/js/jquery-3.6.0.min.js"></script>

