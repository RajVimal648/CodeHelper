
@{
    ViewBag.Title = "OfferManagement";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<section class="page-content course-sec">
    <p class="text-center">Offer  Management is a quick overview of all current Course Offer .</p">
    <div class="comman-space pb-0">
        <div class="settings-tickets-blk course-instruct-blk table-responsive">

            <table id="myTable" class="table table-nowrap mb-0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Course Name</th>
                        <th>Discount Fee</th>
                        <th>Expriy Date </th>
                        <th>Status</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int i = 1;
                        foreach (System.Data.DataRow row in Model.Rows)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@row["email"]</td>
                                <td>@row["course_title"]</td>
                                <td>@row["DiscountFee"]</td>
                                <td>@row["Expirydate"]</td>
                                <td>@row["status"]</td>
                                <td>
                                    <a href="/admin/OfferManagement?id=@row["id"]" onclick="return confirm('Do you really want to delete it?')"><button class="btn btn-danger fa fa-trash" title="Delete"></button> </a>
                                    <button class="btn btn-success fa fa-pencil" title="Edit"></button>
                                    <a href="/admin/OfferManagement?vid=@row["id"]" onclick="return confirm('Do you really want to change status?')"><button class="btn btn-primary fa fa-refresh" title="Change Status"></button></a>
                                </td>
                            </tr>



                            { i = i + 1; }

                        }
                    }
                </tbody>
            </table>

        </div>
    </div>

</section>
