
@{
    ViewBag.Title = "VideoLectureManagement";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<div class="header-two-title text-center" data-aos="fade-up">
    <p class="tagline">Welecome To Admin Videos Mangagement</p>
</div>
<div class="col-xl-12 col-lg-8 col-md-12">
    <div class="row">
        <div class="col-md-12">
            <div class="settings-widget">
                <div class="settings-inner-blk p-0">
                    <div class="comman-space pb-0">
                        <div class="settings-tickets-blk course-instruct-blk table-responsive">

                            <table id="myTable" class="table table-nowrap mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>TITLE</th>
                                        <th>COURSE</th>
                                        <th>VIDEO</th>
                                        <th>LINK</th>
                                        <th>DETAIL</th>
                                        <th>DURATION</th>
                                        <th>STATUS</th>
                                        <th>PAID/FREE</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        int i = 1;
                                        foreach (System.Data.DataRow row in Model.Rows)
                                        {
                                            <tr>
                                                <td>@row["id"]</td>
                                                <td>@row["title"]</td>
                                                <td>@row["courset"]</td>
                                                <td>
                                                    <a href="course-details.html">
                                                        <iframe width="200" height="110" src="@row["link"]" title="YouTube video player" frameborder="0" allow="accelerometer; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                                                    </a>
                                                </td>
                                                <td>@row["link"]</td>
                                                <td>
                                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                        <i class="fa-solid fa-eye"></i>
                                                    </button>
                                                </td>
                                                <td>@row["duration"]</td>
                                                <td>@row["status"]</td>
                                                <!-- Modal -->
                                                <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Course Details</h1>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                @Html.Raw(row["detail"])
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--Modal End-->
                                                <td>@row["ispaid"]</td>
                                                <td>
                                                    <a href="/admin/videolecturemanagement?id=@row["id"]" onclick="return confirm('Do you really want to delete it?')"><button class="btn btn-danger fa fa-trash" title="Delete"></button> </a>
                                                    <a href="/admin/EditLectureVideos?eid=@row["id"]"><button class="btn btn-success fa fa-pencil" title="Edit"></button></a>

                                                    <a href="/admin/videolecturemanagement?vid=@row["id"]" onclick="return confirm('Do you really want to change status?')"><button class="btn btn-primary fa fa-refresh" title="Change Status"></button></a>
                                                </td>
                                            </tr>



                                            { i = i + 1; }

                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
