@model System.Data.DataTable
@{
    ViewBag.Title = "CourseManagement";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


<div class="header-two-title text-center" data-aos="fade-up">
    <p class="tagline">Welecome To Admin Course Mangagement</p>
</div>


<div class="col-xl-12 col-lg-8 col-md-12">
    <div class="row">
        <div class="col-md-12">
            <div class="settings-widget">
                <div class="settings-inner-blk p-0">
                    <div class="comman-space pb-0">
                        <div class="settings-tickets-blk course-instruct-blk table-responsive">

                            <table class="table table-nowrap mb-0" id="myTable">
                                <thead>
                                    <tr>
                                        <th>SR</th>
                                        <th>Course Title</th>
                                        <th>Course Thumbnail</th>
                                        <th>Course Category </th>
                                        <th>Course Insturctor</th>
                                        <th>Course Fee</th>
                                        <th>Course Final Fee</th>
                                        <th>Show Details</th>
                                        <th>Course Duration</th>
                                        <th>Status</th>
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.Rows.Count > 0)
                                        {
                                            int i = 1;
                                            foreach (System.Data.DataRow row in Model.Rows)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@row["Course_Title"]</td>
                                                    <td><img src="~/Content/pic/@row["Course_Thumbnail"]" height="70" width="70" /></td>
                                                    <td>@row["catname"]</td>
                                                    <td>@row["name"]</td>
                                                    <td>@row["Course_Fee"]</td>
                                                    <td>@row["Course_Final_Fee"]</td>
                                                    <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                            <i class="fa-solid fa-eye"></i>
</button></td>
                                                    <td>@row["Course_Duration"]</td>
                                                    <td>@row["status"]</td>
                                                    <td>
                                                        <!-- Modal -->
                                                        <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Course Details</h1>
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        @Html.Raw(row["Course_Details"])
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--Modal End-->
                                                        <a href="/admin/CourseManagement?id=@row["id_course"]" onclick="return confirm('Do you really want to delete it?')">  <button class="btn btn-danger fa fa-trash" title="Delete"></button></a>
                                                        <a href="/admin/editCourseManagement?eid=@row["id_course"]"><button class="btn btn-success fa fa-pencil" title="Edit Record"></button></a> 
                                                        <a href="/admin/CourseManagement?id_cours=@row["id_course"]" onclick="return confirm('Do you really want to change the status?')">     <button class="btn btn-primary fa fa-refresh" title="Change Status"></button></a>
                                                    </td>
                                                </tr>
                                                { i = i + 1; }
                                            }
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Content/assets/js/jquery-3.6.0.min.js"></script>



