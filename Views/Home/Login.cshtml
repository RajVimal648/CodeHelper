@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_GeneralLayoutPage1.cshtml";
}
<style>

    .box {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
        padding-top: 10px;
    }

    .page-content {
        padding: 50px 0 30px;
        margin-top: 70px !important;
    }

    input:hover {
        background-color: lightgrey;
    }
</style>
<body>

    <section class="page-content course-sec">
        <div class="container ">

            <div class="row">
                <div class="col-md-8 mx-auto">

                    <div class="card">

                        <div class="widget-set">

                            <div class="widget-content multistep-form">

                                <div class="add-instructor-form">
                                    <div class="row ">
                                        <div class="col-sm-8 mx-auto ">

                                            <form id="cform" method="post">

                                                <center>
                                                    <div class="add-instructor-inner-header ms-5">
                                                        <h4 class="fw-bold dt-center mt-3 me-3 mb-3" style="color:#392c7d">LOGIN HERE</h4>
                                                    </div>
                                                </center>
                                                <div class="row">
                                                    <div class="col-sm-12 px-4">
                                                        <div class="form-group">
                                                            <label class="add-instructor-label">Email</label>
                                                            <input type="text" class="form-control" placeholder="Enter Your Email.." name="email">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 px-4">
                                                        <div class="form-group">
                                                            <label class="add-instructor-label">Password</label>
                                                            <input type="password" placeholder="Enter Password.." class="form-control" name="password">
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-sm-12 px-4">
                                                        <div class="form-group">
                                                            <a href="/home/ForgotPassword">  <label class="add-instructor-label !important " style="color: orangered !important ">Forgot Password...?</label></a>
                                                            <p class="add-instructor-label !important text-end ms-5  " style="color: #392c7d; font-size:16px !important ">Don't have an account ? <a href="/home/registration">Register</a></p>
                                                        </div>
                                                    </div>
                                                </div>

                                                <center>
                                                    <input type="submit" class="login-head button mb-4" value="Login" />
                                                </center>
                                            </form>
                                        </div>



                                    </div>
                                    <div class="col-sm-7">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>